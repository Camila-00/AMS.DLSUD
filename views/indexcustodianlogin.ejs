<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="icon" href="./assets/DLSUDLOGO.png" type="image/x-icon">
    
    <style>
body {
    margin: 0;
    font-family: Arial, sans-serif;
    background-image: url('../assets/ictc.png');
    background-size: cover;
    background-repeat: no-repeat;
    background-position: -400px center; /* Adjusted position to the left */
    height: 100vh;
}


        .container {
            display: flex;
            justify-content: flex-end; /* Align container to the right */
            align-items: center;
            height: 100%;
            width: 100%; /* Covering half of the page */
            position: absolute;
            right: 0;
            top: 0;
        }
        .login-form {
            background-color: white;
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 660px;
            width: 500%;
            height: 660px;
            text-align: center;
            align-items: center;
        }
        h2 {
            margin-top: 20px;

            color: #333;
        }
        input[type="email"],
        input[type="adminum"],
        input[type="password"],
        button {
            width: calc(100% - 22px);
            padding: 12px;
            margin-bottom: 20px;
            border-radius: 4px;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }
        a {
            text-decoration: none;
            color: #1db954;
        }

        a:hover{
            text-decoration: none;
            color: #038903;
        }
        button {
            padding: 10px 20px;
            border: 20px;
            border-radius: 4px;
            background-color: #1db954 ;
            color: #fff;
            cursor: pointer;
        }
        button:hover {
            background-color: #038903;
        }
        .forgot-password {
            text-align: left;
            margin-bottom: 20px;
            margin-left: 10px;
        }
        .divider {
            margin: 10px 0;
            border-bottom: 1px solid #ccc;
        }
        .image-container {
            margin-right: 420px;
            flex: 1; 
            max-width: 400px; 
        }
        .logo {
margin-top: 100px;
    width: 200px; /* Adjust the width as needed */
    height: auto; /* Maintain aspect ratio */
}

    </style>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AMS - Asset Management System</title>
</head>
<body>
    <div class="container">
        <!-- Login form -->
        <div class="login-form">
            <img src="./assets/ams_logo.png" alt="AMS Logo" class="logo">
            <h2>Welcome back</h2>
            <form id="loginForm" action="/indexcustodianlogin" method="POST">
                <input type="adminum" id="adminum" name="adminum" placeholder="User ID" required><br><br>
                <input type="password" id="password" name="password" placeholder="Password" required><br><br>
                <div class="forgot-password">
                    <a href="forgot-password-page">Forgot password?</a>
                </div>
                <button type="submit">Continue</button><br><br>
            </form>
            <div class="divider"></div>
            <p>Don't have an account? <a href="regis.ejs">Sign up</a></p>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const loginForm = document.getElementById("loginForm");
            const errorMessage = document.getElementById("errorMessage");
            loginForm.addEventListener("submit", async function(event) {
                event.preventDefault();
                const adminum = document.getElementById("adminum").value;
                const password = document.getElementById("password").value;

                try {
                    const response = await fetch("/indexcustodianlogin", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                        },
                        body: JSON.stringify({ adminum, password }),
                    });

                    if (response.ok) {
                      console.log('correct')
                      const jsonResponse = await response.json();
                      console.log()
                      await localStorage.setItem("lastName", jsonResponse.auth.last_name);
                        window.location.href = "/indexcustodianhomepage.ejs";
                    } else {
                        const errorMessageText = await response.json();
                        errorMessage.textContent = errorMessageText.error;
                    }
                } catch (error) {
                    console.error("Error during login:", error);
                }
            });
        });
    </script>
</body>
</html>
